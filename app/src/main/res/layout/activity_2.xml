<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tnovacic.novathon.Activity2">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.898"
        app:srcCompat="@drawable/btn_random_scan_clear"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/food"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Food"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="83dp"
        android:layout_marginLeft="123dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="123dp" />

    <TextView
        android:id="@+id/bills"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Bills"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/drinks"
        android:layout_marginLeft="129dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="129dp" />

    <TextView
        android:id="@+id/Fuel"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Fuel"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/bills"
        android:layout_marginLeft="129dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="129dp" />

    <TextView
        android:id="@+id/Other_expenses"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Other expenses"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/Fuel"
        android:layout_marginLeft="57dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="57dp" />

    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="TOTAL"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/Other_expenses"
        android:layout_marginLeft="111dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="111dp" />

    <TextView
        android:id="@+id/Remaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remaining"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/total"
        android:layout_marginLeft="91dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="91dp" />

    <TextView
        android:id="@+id/food_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="83dp"
        android:layout_marginRight="81dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="81dp" />

    <TextView
        android:id="@+id/drink_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0,00"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/food_num"
        android:layout_marginRight="81dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="81dp" />

    <TextView
        android:id="@+id/bills_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0,00"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/drink_num"
        android:layout_marginRight="81dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="81dp" />

    <TextView
        android:id="@+id/fuel_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0,00"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/bills_num"
        android:layout_marginRight="81dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="81dp" />

    <TextView
        android:id="@+id/other_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0,00"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/fuel_num"
        android:layout_marginRight="81dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="81dp" />

    <TextView
        android:id="@+id/total_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0,00"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/other_num"
        android:layout_marginRight="80dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="80dp" />

    <TextView
        android:id="@+id/rem_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0,00"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toBottomOf="@+id/total_num"
        android:layout_marginRight="81dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="81dp" />

    <TextView
        android:id="@+id/drinks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drinks"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/food"
        android:layout_marginLeft="116dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="116dp" />

    <LinearLayout
        android:id="@+id/food_bar"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="0dp"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/drinks_bar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"></LinearLayout>

    <LinearLayout
        android:id="@+id/drinks_bar"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:layout_marginRight="-8dp"
        android:orientation="horizontal"
        app:layout_constraintRight_toLeftOf="@+id/bills_bar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"></LinearLayout>

    <LinearLayout
        android:id="@+id/other_bar"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:layout_marginRight="31dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"></LinearLayout>

    <LinearLayout
        android:id="@+id/fuel_bar"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:layout_marginRight="-7dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintRight_toLeftOf="@+id/other_bar"
        app:layout_constraintTop_toTopOf="parent"></LinearLayout>

    <LinearLayout
        android:id="@+id/bills_bar"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:layout_marginRight="-2dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintRight_toLeftOf="@+id/fuel_bar"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
